<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/dfs_account_content_box"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_income_today"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtIncomeToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_income_week"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtIncomeWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_income_month"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtIncomeMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="324"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_commission_month"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtCommisionThisMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1138"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dfs_account_summary_pop_dish_box"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/df_my_total_earning"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtTotalEarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$8907,00"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="22sp" />
            </LinearLayout>

        </LinearLayout>
            <com.ijoomer.customviews.IjoomerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:text="@string/df_paypal_message"
                android:textColor="@color/df_reward_detail_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgSummary"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dfs_account_summary_btn" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgMoney"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dfs_account_money_btn" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgPayment"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dfs_account_payment_btn" />
    </LinearLayout>

</FrameLayout>