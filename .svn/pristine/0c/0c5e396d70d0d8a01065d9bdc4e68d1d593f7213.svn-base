<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/df_profile_stat_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imgCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/dfc_profile_stats_fav_cuisine_margin"
                    android:src="@drawable/df_profile_state_favourite_cuisine" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtFavouriteCuisine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dfc_profile_stats_fav_cuisine_name_margin"
                    android:text="Italian"
                    android:shadowColor="#333333"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="@color/white"
                    android:textSize="24dp" />
            </FrameLayout>

            <com.ijoomer.customviews.IjoomerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dfc_profile_stats_top_dishes_margin"
                android:text="@string/df_top_5_dishes_ordered"
                android:textColor="@color/df_reward_detail_color"
                android:textSize="20dp"
                android:shadowColor="#333333"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textStyle="bold" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dfc_profile_stats_top_dishes_layout_margin"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:orientation="vertical" >

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtDish1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/dfc_profile_stats_top_dishes_padding"
                        android:text="Hawaian Pizza"
                        android:shadowColor="#333333"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:textColor="@color/df_reward_detail_color"
                        android:textSize="20dp" />

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtDish2"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dfc_profile_stats_top_dishes_padding"
                        android:text="Macroni Chease"
                        android:textColor="@color/df_reward_detail_color"
                        android:shadowColor="#333333"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:textSize="20dp" />

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtDish3"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dfc_profile_stats_top_dishes_padding"
                        android:text="Haka Noodles"
                        android:textColor="@color/df_reward_detail_color"
                        android:textSize="20dp"
                        android:shadowColor="#333333"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"/>

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtDish4"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dfc_profile_stats_top_dishes_padding"
                        android:shadowColor="#333333"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="Chiken and Fish Fry"
                        android:textColor="@color/df_reward_detail_color"
                        android:textSize="20dp" />

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtDish5"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dfc_profile_stats_top_dishes_padding"
                        android:shadowColor="#333333"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:text="Sweet and sout soup"
                        android:textColor="@color/df_reward_detail_color"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dfc_profile_stats_dish_banner_margin"
        android:gravity="center"
        android:paddingBottom="@dimen/dfc_profile_stats_dish_banner_padding"
        android:background="@drawable/df_profile_stat_offer_bg" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtDishesOrdered"
            android:layout_width="@dimen/dfc_profile_stats_top_dishes_orderd_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="29 Dishes Ordered"
            android:textColor="@color/df_reward_detail_color"
            android:textSize="24dp"
            android:shadowColor="#333333"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dfc_profile_stats_tab_margin" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/df_profile_stats_btn" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/df_profile_details_btn" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/df_profile_adress_btn" />
    </LinearLayout>

</FrameLayout>