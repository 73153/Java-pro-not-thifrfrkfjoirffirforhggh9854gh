<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/df_background_full"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/df_home_btn" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/df_back_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/df_rewardpoints_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtRewardCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/df_reward_detail_color"
                android:textSize="52sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/df_rewardpoints_circle_" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_vertical"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/df_reward_points_activated_banner" />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/imgClaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/df_rewardpoints_claim_btn" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtRewardActivationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="10 points"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="26sp" />
            </FrameLayout>

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/txtMyRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/df_rewardpoints_btn"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="@string/df_my_rewards"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/df_rewardpoints_rack"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgReward10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />

                <ImageView
                    android:id="@+id/imgReward1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/df_rewardpoints_off" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>