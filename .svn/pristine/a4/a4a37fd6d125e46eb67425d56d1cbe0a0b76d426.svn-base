<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/dfs_account_content_box"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_dishes_sold_today"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDishesSoldToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_dishes_sold_week"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDishesSoldWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_dishes_sold_month"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDishesSoldMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="324"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/df_dishes_sold_todate"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtDishesSoldToDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1138"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dfs_account_summary_pop_dish_box"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="@string/df_most_popular_dish"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtMostPopularDish"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sweet and sour chicken"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgSummary"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dfs_account_summary_btn" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgMoney"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dfs_account_money_btn" />

        <com.ijoomer.customviews.IjoomerButton
            android:layout_weight="1"
            android:id="@+id/imgPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dfs_account_payment_btn" />
    </LinearLayout>

</FrameLayout>