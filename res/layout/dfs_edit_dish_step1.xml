<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/df_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/df_home_btn" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/df_back_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dfs_edit_dish_banner" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/df_settings_content_box"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDishName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dfs_add_edit_box"
                    android:gravity="left|center_vertical"
                    android:hint="@string/df_dish_name"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDishCatagory"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dfs_add_edit_box"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:hint="@string/df_dish_catagory"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <com.ijoomer.customviews.IjoomerCheckBox
                    android:id="@+id/chkAvailableAllTime"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/df_catagory_selector"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/df_dish_all_time"
                    android:textColor="@color/df_reward_detail_color"
                    android:textSize="20sp" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDishFrom"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dfs_add_edit_box"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:hint="@string/df_dish_from"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDishTo"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dfs_add_edit_box"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:hint="@string/df_dish_to"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true" />

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtDishAbout"
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dfs_dish_about_box"
                    android:gravity="left"
                    android:hint="@string/df_dish_about"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    />

                <com.ijoomer.customviews.IjoomerButton
                    android:id="@+id/imgNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dfs_add_edit_next_btn" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:src="@drawable/df_corner_bg"/>
</FrameLayout>