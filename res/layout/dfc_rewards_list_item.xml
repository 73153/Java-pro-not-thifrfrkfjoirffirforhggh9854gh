<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/df_reward_list_item_box"
        android:gravity="center"
        android:orientation="vertical" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtRewardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Reward Title"
            android:textColor="@color/df_reward_detail_color"
            android:textSize="18sp" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtRewardCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Reward Code"
            android:textColor="@color/df_reward_detail_color"
            android:textSize="18sp" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtRewardDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Reward Date"
            android:textColor="@color/df_reward_detail_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>