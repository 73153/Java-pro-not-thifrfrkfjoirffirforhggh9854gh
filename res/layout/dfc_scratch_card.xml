<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/df_background_full"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/df_home_btn" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/df_back_btn" />
    </LinearLayout>

    <com.ijoomer.customviews.IjoomerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/df_match_to_win"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/df_login_box"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/df_scratch_card_circle"
                    android:gravity="center"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/df_scratch_card_congratulation_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <com.ijoomer.customviews.IjoomerTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="@string/df_congratulations"
                android:textColor="@color/df_reward_detail_color"
                android:textSize="24sp" />

            <com.ijoomer.customviews.IjoomerTextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/df_win_message"
                android:textColor="@color/df_reward_detail_color"
                android:textSize="24sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>